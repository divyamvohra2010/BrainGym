{
  "name": "braingymcv",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "preinstall": "npm install vite esbuild typescript -g || true",
    "dev": "vite",
    "build": "npm install --include=dev && vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist/server",
    "start": "node dist/server/index.js",
    "render-build": "npm run build"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "express": "^4.21.2",
    "path": "^0.12.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.11",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "esbuild": "^0.25.0",
    "tailwindcss": "^3.4.15",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49"
  }
}
